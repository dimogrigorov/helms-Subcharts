  <build>
    <plugins>
      <!--this task is called as 'mvn exec:exec', when the DTD has changed, and the generated XSD needs to be commited-->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>perl</executable>
          <arguments>
            <argument>${basedir}/scripts/dtd2xsd.pl</argument>
            <argument>cCBD</argument>
            <argument>${dtd.schema.path}</argument>
          </arguments>
          <outputFile>${xsd.generated.path}</outputFile>
        </configuration>
      </plugin>

      <!--this task is not used for the time being, dont remove it-->
      <!--<plugin>
          <groupId>com.coderplus.maven.plugins</groupId>
          <artifactId>copy-rename-maven-plugin</artifactId>
          <version>1.0.1</version>
          <executions>
              <execution>
                  <id>copy-file</id>
                  <phase>generate-resources</phase>
                  <goals>
